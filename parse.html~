<!DOCTYPE html>
<html>
<body>

<div id="deck">
</div>

<script>
var xhttp = new XMLHttpRequest();
xhttp.onreadystatechange = function() {
	if (xhttp.readyState == 4 && xhttp.status == 200) {
	myFunction(xhttp);
	}
};
xhttp.open("GET", "tickets.xml", true);
xhttp.send();

function myFunction(xml) {
	var xmlDoc = xml.responseXML;
	var properties = ["transport", "number", "departure", "arrival"];

	for (var i = 0; i < xmlDoc.getElementsByTagName("ticket").length; i++) {
		properties.forEach(function(property, j, properties){
			var newP = document.createElement("p");
			newP.innerHTML = xmlDoc.getElementsByTagName(property)[i].childNodes[0].nodeValue;
			deck.appendChild(newP);
		})
	}

	
}
</script>

</body>
</html> 
